<h1><%= @cocktail.name %></h1>


<% if @cocktail.doses.any? %>
  <p>Here is the magic</p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> - <%= dose.ingredient_id %></li>
    <% end %>
  </ul>
<% else %>
  <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
<% end %>

<%= link_to 'Delete this cocktail', cocktails_path(@cocktail), method: :delete %>
