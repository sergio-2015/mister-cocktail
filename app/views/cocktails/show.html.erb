<div class="layer">

  <h1><%= @cocktail.name %></h1>


  <% if @cocktail.doses.any? %>
    <p>Here is the magic</p>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> : <%= dose.description %> cl. </li>
      <% end %>
    </ul>
    <p><%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-danger" %></p>
  <% else %>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
  <% end %>

  <p><%= link_to 'Delete this cocktail', cocktail_path(@cocktail), method: :delete, class: "btn btn-danger" %></p>

</div>


